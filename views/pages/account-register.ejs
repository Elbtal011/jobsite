<%- include('../partials/site-head', { title: 'Headline Agentur | Registrierung' }) %>
<%- include('../partials/site-header') %>

<section class="breadcrumb-wrapper">
  <div class="container">
    <div class="page-heading">
      <h1>Registrierung</h1>
      <p>Neues Konto erstellen</p>
    </div>
  </div>
</section>

<section class="section-padding">
  <div class="container account-shell">
    <div class="account-card">
      <h3>Neues Konto anlegen</h3>
      <p class="account-muted">Erstellen Sie Ihr persönliches Konto für Bewerbungen und Profilverwaltung.</p>
      <% if (error) { %>
        <div class="alert error"><%= error %></div>
      <% } %>
      <form method="post" action="/konto/registrieren">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <div class="account-form-grid">
          <div class="account-field"><label for="reg-first">Vorname</label><input id="reg-first" name="first_name" required value="<%= values.first_name || '' %>" /></div>
          <div class="account-field"><label for="reg-last">Nachname</label><input id="reg-last" name="last_name" required value="<%= values.last_name || '' %>" /></div>
          <div class="account-field"><label for="reg-email">E-Mail</label><input id="reg-email" name="email" type="email" required value="<%= values.email || '' %>" /></div>
          <div class="account-field"><label for="reg-phone">Telefon</label><input id="reg-phone" name="phone" value="<%= values.phone || '' %>" /></div>
          <div class="account-field"><label for="reg-pass">Passwort (mind. 8 Zeichen)</label><input id="reg-pass" name="password" type="password" required /></div>
          <div class="account-field"><label for="reg-birth">Geburtsdatum</label><input id="reg-birth" name="birth_date" type="date" value="<%= values.birth_date || '' %>" /></div>
          <div class="account-field full"><label for="reg-address">Anschrift</label><input id="reg-address" name="address_line" value="<%= values.address_line || '' %>" /></div>
          <div class="account-field"><label for="reg-zip">PLZ</label><input id="reg-zip" name="zip" value="<%= values.zip || '' %>" /></div>
          <div class="account-field"><label for="reg-city">Stadt</label><input id="reg-city" name="city" value="<%= values.city || '' %>" /></div>
          <div class="account-field"><label for="reg-country">Land</label><input id="reg-country" name="country" value="<%= values.country || '' %>" /></div>
          <div class="account-field full">
            <label for="reg-captcha">Sicherheitsfrage: <span class="captcha-pill"><%= captchaQuestion %></span></label>
            <input id="reg-captcha" name="captcha_answer" required />
          </div>
          <div class="account-actions"><button class="theme-btn" type="submit">Registrieren <i class="fa-solid fa-arrow-right"></i></button></div>
        </div>
      </form>
      <p class="account-links">Bereits registriert? <a href="/konto/login">Zum Login</a></p>
    </div>
  </div>
</section>

<%- include('../partials/site-footer') %>
